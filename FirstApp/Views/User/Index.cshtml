@model IEnumerable<FirstApp.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="m-0">User List</h5>
        <div class="d-flex align-items-center">
            <button class="btn btn-sm btn-outline-secondary me-2">
                <i class="bi bi-gear"></i> Manage
            </button>
            <input type="text" class="form-control form-control-sm" placeholder="Search..." />
        </div>
    </div>

    <form asp-action="UpdateUsersStatus" method="post" id="userActionsForm">
        @Html.AntiForgeryToken()
        <div class="d-flex align-items-center mb-3">
            <button type="submit" class="btn btn-danger me-2" name="action" value="Block" id="blockButton" disabled>
                <i class="bi bi-lock"></i> Block
            </button>
            <button type="submit" class="btn btn-outline-danger me-2" name="action" value="Unblock" id="unblockButton" disabled>
                <i class="bi bi-unlock"></i> Unblock
            </button>
            <button type="submit" class="btn btn-outline-secondary" name="action" value="Delete" id="deleteButton" disabled>
                <i class="bi bi-trash"></i> Delete
            </button>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>
                            <input type="checkbox" id="selectAll" />
                        </th>
                        <th>Name & Email</th>
                        <th>Last Login</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="userIds" value="@user.Id" class="user-checkbox" />
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    @if (user.IsBlocked)
                                    {
                                        <i class="bi bi-lock-fill text-danger me-2" title="Blocked"></i>
                                    }
                                    <div>
                                        <strong class="d-block">@user.Name</strong>
                                        <small class="text-muted d-block">@user.Email</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                @user.LastSeen.ToString("dd-MMM-yyyy HH:mm")
                            </td>
                            <td>
                                <span class="badge @(user.IsBlocked ? "bg-danger" : "bg-success")">
                                    @(user.IsBlocked ? "Blocked" : "Active")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Select all checkboxes functionality
            $('#selectAll').change(function() {
                $('.user-checkbox').prop('checked', $(this).prop('checked'));
                toggleButtons();
            });

            // Check if any checkbox is selected
            $('.user-checkbox').change(function() {
                toggleButtons();
            });

            function toggleButtons() {
                const checkedCount = $('.user-checkbox:checked').length;
                const anyChecked = checkedCount > 0;
                $('#blockButton, #unblockButton, #deleteButton').prop('disabled', !anyChecked);
            }
        });
    </script>
}


